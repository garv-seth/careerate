{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@assets/*": ["attached_assets/*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "server/**/*.ts",
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}